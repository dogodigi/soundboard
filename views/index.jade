extends layout

block content
  .row
    form.form-inline
      .form-group
        label(for='filter') Filter
        input.form-control.filter#soundboard-filter(type="text",name="filter")
      button.btn.btn-default.btn-lg(type="button", disabled="disabled")
        span.glyphicon.glyphicon-stop
  .row
    .bs-glyphicons
      ul#soundcards.sortable
        each sound, index in sounds
          li
            .soundcard.panel.panel-default
              .panel-heading
                .btn-group.soundcard-buttons(role="group", aria-label="...", data-sound-index= index, data-sound-path= sound.path)
                  button.btn.btn-default.sound-play(type="button", title="play")
                    span.glyphicon.glyphicon-play
                  button.btn.btn-default.sound-loop(type="button", title="loop")
                    span.glyphicon.glyphicon-repeat
              .panel-body
                = sound.name
              .panel-footer
                if sound.duration
                  .progress-label
                    = sound.duration.label
                  .progress
                    .progress-bar.soundcard-progress(role="progressbar",aria-valuenow="100", aria-valuemin="0", aria-valuemax="100", style="width: 100%;")
                else
                  .progress-label 00:00
                  .progress
                    .progress-bar.soundcard-progress(role="progressbar",aria-valuenow="0", aria-valuemin="0", aria-valuemax="0", style="width:100%;display:none;")
